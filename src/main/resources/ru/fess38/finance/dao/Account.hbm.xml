<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="ru.fess38.finance.model.Account" table="${accountTable}">
    <id name="id" column="id">
      <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
        <param name="sequence_name">${sequence}</param>
      </generator>
    </id>
    <property name="name" column="name"/>
    <property name="amount" column="amount"/>
    <many-to-one name="currency" class="ru.fess38.finance.model.Currency" column="currencyId"/>
  </class>

  <query name="accountDeleteById">
    <![CDATA[update Account set isDeleted = TRUE where id = :id]]>
  </query>

  <query name="accountFindAll">
    <![CDATA[from Account where isService = FALSE and isDeleted = FALSE]]>
  </query>

  <query name="accountFindById">
    <![CDATA[from Account where id = :id]]>
  </query>

  <query name="accountFindServiceByCurrencyId">
    <![CDATA[from Account where currencyId = :id and isService = TRUE and isDeleted = FALSE]]>
  </query>
</hibernate-mapping>
