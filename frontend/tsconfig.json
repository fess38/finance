{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jasmine"
    ],
    "lib": [
      "ES2020",
      "dom"
    ],
    "module": "ES2020",
    "baseUrl": "./"
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": false
  },
  "include": [
    "src/**/*"
  ]
}
